{% extends 'base.html.twig' %}

{% block title %}Entreprises{% endblock %}

{% block body %}


        <div class="row">
            {% for entreprise in listeEntreprises %} <!--if entreprise.stages | length > 0 -->
            <div class="col-md-6" >
                <div class="list-group" style="margin-bottom: 20px">
                     <a href="#" class="list-group-item list-group-item-action active"><strong><h2>{{entreprise.nom}}</h2></strong></a>
                    <div class="list-group-item">
                        <h6 class="list-group-item-heading">
                            <p>Numéro interne : {{entreprise.id}}</p>
                            <p>Activité : {{entreprise.activite}}</p>
                            <p>Adresse : {{entreprise.adresse}}</p>
                        </h6>
                        <p>
                            <a href="{{path('stagesEntreprise', {nom:entreprise.nom})}}">Voir tous les stages de l'entreprise {{entreprise.nom}}</a>
                        </p>
                        <a class="btn btn-dark btn-sm btn-block" href="{{path('modificationEntreprise', {id:entreprise.id})}}">Modifier l'entreprise...</a>
                    </div>
                 </div>
            </div>
            {% endfor %}
        </div>

                



{% endblock %}