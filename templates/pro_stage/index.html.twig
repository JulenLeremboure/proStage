{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur ProStage{% endblock %}

{% block body %}


    <div class="row">
        {% for stage in listeStages %}
        <div class="col-md-4">
            <div class="card">
                <h5 class="card-header">
                    <strong>{{stage.titre}}</strong>
                </h5>
                <div class="card-body">
                    <p class="card-text">
                        {{stage.description}}
                    </p>
                </div>
                <div class="card-footer">
                    <a href="{{path('stage',{id:stage.id})}}">En savoir plus...</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

<div class="row">
    <div class="col-md-12">
    </div>
</div>
<div class="row">
    <div class="col-md-12">
    </div>
</div>

<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

</div>

{% endblock %}